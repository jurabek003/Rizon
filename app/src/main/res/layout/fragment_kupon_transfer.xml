<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    tools:context=".fragments.profileFragment.coupons.KuponTransferFragment">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <com.google.android.material.card.MaterialCardView
                android:layout_width="330dp"
                android:layout_height="310dp"
                android:layout_gravity="center"
                android:backgroundTint="#FFFFFF"
                android:layout_marginTop="10dp"
                app:strokeWidth="0dp"
                app:cardElevation="5dp">
                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                    <TextView
                        android:id="@+id/tv_text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="ID orqali mijozga kupon yuborish"
                        android:textColor="@color/black"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:fontFamily="@font/inter"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        android:layout_marginTop="20dp"/>
                    <TextView
                        android:id="@+id/textView5"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Yuboruvchi"
                        android:textSize="10sp"
                        android:textColor="@color/black"
                        android:alpha=".75"
                        android:fontFamily="@font/inter"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/tv_text"
                        android:layout_marginStart="10dp"
                        android:layout_marginTop="20dp"/>
                    <TextView
                        android:id="@+id/tv_yuboruvchi"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/black"
                        android:textSize="14sp"
                        android:text="Ziyoda Hasanova"
                        android:fontFamily="@font/inter"
                        app:layout_constraintTop_toBottomOf="@+id/textView5"
                        app:layout_constraintStart_toStartOf="parent"
                        android:layout_marginStart="10dp"
                        android:textStyle="bold"/>
                    <TextView
                        android:id="@+id/textView6"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Kupon"
                        android:textSize="10sp"
                        android:textColor="@color/black"
                        android:alpha=".5"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/tv_text"
                        android:layout_marginTop="20dp"
                        android:layout_marginEnd="20dp"/>

                    <TextView
                        android:id="@+id/tv_kupon"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="3 000"
                        android:textColor="@color/black"
                        android:textSize="16sp"
                        android:layout_marginEnd="20dp"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/textView6" />

                    <TextView
                        android:id="@+id/textView4"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="10dp"
                        android:layout_marginTop="35dp"
                        android:fontFamily="@font/inter"
                        android:text="Qabul qiluvchi ID"
                        android:textColor="@color/black"
                        android:textSize="10sp"
                        android:textStyle="bold"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/tv_yuboruvchi" />

                    <EditText
                        android:id="@+id/edt_id"
                        android:layout_width="150dp"
                        android:layout_height="30dp"
                        android:layout_marginStart="10dp"
                        android:background="@drawable/edt_bac"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/textView4" />
                    <TextView
                        android:id="@+id/textView7"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="45dp"
                        android:layout_marginTop="35dp"
                        android:fontFamily="@font/inter"
                        android:text="Kupon miqdori"
                        android:textColor="@color/black"
                        android:textSize="10sp"
                        android:textStyle="bold"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/tv_kupon"/>

                    <EditText
                        android:id="@+id/edt_kupon"
                        android:layout_width="90dp"
                        android:layout_height="30dp"
                        android:layout_marginEnd="25dp"
                        android:background="@drawable/edt_bac"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/textView7" />

                    <TextView
                        android:id="@+id/textView8"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="10dp"
                        android:layout_marginTop="20dp"
                        android:fontFamily="@font/inter"
                        android:text="Qabul qiluvchi ism va familiyasi"
                        android:textColor="@color/black"
                        android:textSize="10sp"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/edt_id" />

                    <TextView
                        android:id="@+id/tv_full_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="10dp"
                        android:fontFamily="@font/inter"
                        android:text="Munisa Rizayeva Shaxzod qizi"
                        android:textColor="#B9B9B9"
                        android:textSize="14sp"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/textView8" />
                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/btn_credit_card"
                        android:layout_width="wrap_content"
                        android:layout_height="40dp"
                        app:cornerRadius="4dp"
                        android:text="Oâ€™tkazish"
                        android:backgroundTint="#002940"
                        android:textSize="9.21sp"
                        android:textColor="@color/white"
                        app:icon="@drawable/credit_card"
                        app:iconGravity="textEnd"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        android:layout_marginBottom="20dp"/>

                </androidx.constraintlayout.widget.ConstraintLayout>
            </com.google.android.material.card.MaterialCardView>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Kupon transfer tarixi"
                android:textColor="@color/black"
                android:textSize="18sp"
                android:fontFamily="@font/inter"
                android:layout_gravity="center"
                android:paddingVertical="17dp"/>
            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rv_kupon"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"/>

            <ProgressBar
                android:id="@+id/my_progress_bar"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:padding="150dp" />

        </LinearLayout>
    </ScrollView>

</FrameLayout>