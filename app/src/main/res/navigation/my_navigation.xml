<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/my_navigation"
    app:startDestination="@id/homeFragment">
    <fragment
        android:id="@+id/homeFragment"
        android:name="uz.turgunboyevjurabek.rizon.fragments.HomeFragment"
        android:label="fragment_home"
        tools:layout="@layout/fragment_home" >
        <action
            android:id="@+id/action_homeFragment_to_selectFragment"
            app:destination="@id/selectFragment" />
        <action
            android:id="@+id/action_homeFragment_to_profileFragment"
            app:destination="@id/profileFragment" />
        <action
            android:id="@+id/action_homeFragment_to_orderFragment"
            app:destination="@id/orderFragment" />
        <action
            android:id="@+id/action_homeFragment_to_productFragment"
            app:destination="@id/productFragment" />
    </fragment>
    <fragment
        android:id="@+id/productFragment"
        android:name="uz.turgunboyevjurabek.rizon.fragments.ProductFragment"
        android:label="fragment_mahsulot"
        tools:layout="@layout/fragment_product" />
    <fragment
        android:id="@+id/selectFragment"
        android:name="uz.turgunboyevjurabek.rizon.fragments.SelectFragment"
        android:label="fragment_select"
        tools:layout="@layout/fragment_select" />
    <fragment
        android:id="@+id/profileFragment"
        android:name="uz.turgunboyevjurabek.rizon.fragments.ProfileFragment"
        tools:layout="@layout/fragment_profil"
        android:label="ProfileFragment" />
    <fragment
        android:id="@+id/orderFragment"
        android:name="uz.turgunboyevjurabek.rizon.fragments.OrderFragment"
        android:label="fragment_order"
        tools:layout="@layout/fragment_order" />
</navigation>